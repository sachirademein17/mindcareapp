{
  "name": "mental-health-platform-testing",
  "version": "1.0.0",
  "description": "Industry-standard testing setup for Mental Health Platform",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:api": "newman run tests/api/mental-health-api.postman_collection.json",
    "test:performance": "k6 run tests/performance/load-test.js",
    "test:security": "npm audit && snyk test",
    "test:accessibility": "axe --dir ./dist",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:performance",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lighthouse": "lighthouse http://localhost:5173 --output=html --output-path=./reports/lighthouse.html",
    "sonar": "sonar-scanner"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "@types/supertest": "^2.0.16",
    "axe-core": "^4.8.0",
    "eslint": "^8.55.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.4.0",
    "newman": "^6.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/main.tsx",
      "!src/vite-env.d.ts"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "<rootDir>/tests/**/*.(test|spec).{js,jsx,ts,tsx}"
    ]
  }
}
